= semantic_form_for @sample do |f|
  = f.inputs :name => "Text" do
    =f.input :url, :as => :url
    =f.input :body, :as => :text


  =f.inputs :name => "Tags" do
    = f.input :tags, :collection => Tag.all.map {|t| t.title}, :as => :check_boxes

  =f.inputs :name => "Author" do
    =f.input :author, :collection => Author.all.map {|a| a.name}, :as => :select
  
  =f.actions :submit 